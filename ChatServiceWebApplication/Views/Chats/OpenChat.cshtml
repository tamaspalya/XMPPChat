@{
}



<textarea id="sendMessage" name="sendMessage" rows="15" cols="100" readonly style="resize: none;">
 @foreach (var item in Model.Archive)
 {
    @Html.Display(item);
 }
</textarea>

<form class="form" method="post"  asp-action="SendMessage">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <input asp-for="Message.Recipient" type="text" value=@Model.Message.Recipient readonly />
        <span asp-validation-for="Message.Recipient" class="text-danger"></span>
    </div>
    <div class="form-group">
        <textarea asp-for="Message.Content" class="form-input" id="sendMessage" cols="100" rows="5" style="resize: none;"></textarea>
        <span asp-validation-for="Message.Content" class="text-danger"></span>
    </div>
        <input type="submit" value="Send" class="action-button" />
</form>
